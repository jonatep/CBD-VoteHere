<%- include('head', { title: 'Voting Creation' }) -%>
<head>
  <title>Votings</title>
</head>
<body>
  <header>
    <h1>Votings</h1>
  </header>
  <div id="container">
    <div id="votaciones">

    </div>
    <% votings.forEach(function(votacion) { %>
      <script>
        var today = new Date();
        var last_date = "<%= votacion.last_date %>";
        var last_hour = "<%= votacion.last_hour %>";
        var [year, month, day] = last_date.split('-');
        var [hour, minutes] = last_hour.split(':');
        var seconds = 0;
        var last_date = new Date(
          +year,
          +month -1,
          +day,
          +hour,
          +minutes,
          +seconds
        );

        var botonVotacion = document.createElement("button");
        var voting_id = "<%= votacion.id %>"
        var voting_name = "<%= votacion.name %>"
        var enlace_boton = document.createElement("a");
        enlace_boton.id = voting_id;
        var enlace = "/voting/" + voting_id;
        enlace_boton.setAttribute('href', enlace);
        botonVotacion.type = "submit";
        botonVotacion.textContent = voting_name;
        enlace_boton.appendChild(botonVotacion);
        if (today > last_date){
          botonVotacion.setAttribute("style", "background-color:#ec4c4c");
        }
        document.getElementById("votaciones").appendChild(enlace_boton);
      </script>
      <% }) %>

  </div>

</body>

<%- include('foot') -%>